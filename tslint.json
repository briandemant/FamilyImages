{
	"defaultSeverity": "error",
	"extends": [
		"tslint:recommended",
		"tslint-consistent-codestyle",
		"tslint-immutable",
		"tslint-microsoft-contrib/recommended"
	],
	"rules": {
		"jsx-boolean-value": false,
		"interface-name": [true, "never-prefix"],
		"no-var-requires": false,
		"no-console": false,
		"object-literal-sort-keys": false,
		"member-access": [false, "check-accessor"],
		"curly": true,
		"no-return-await": true,
		"no-string-throw": true,
		"no-var-keyword": true,
		"prefer-object-spread": true,
		"max-file-line-count": [true, 300],
		"no-unnecessary-initializer": true,
		"no-angle-bracket-type-assertion": true,
		"prefer-template": [true, "allow-single-concat"],
		"prefer-const": [
			true,
			{
				"destructuring": "all"
			}
		],
		"encoding": true,
		"cyclomatic-complexity": [true, 20],
		"class-name": true,
		"variable-name": [true, "ban-keywords", "allow-leading-underscore", "check-format", "allow-pascal-case"],
		"max-classes-per-file": [true, 5, "exclude-class-expressions"],
		"array-type": [true, "array"],
		"arrow-return-shorthand": true,
		"member-ordering": false,
		"one-line": [true, "check-catch", "check-finally", "check-else", "check-open-brace"],
		"object-literal-key-quotes": [false, "as-needed"],
		"semicolon": false,
		"indent": [true, "tabs", 1],
		"static-this": true,
		"prefer-for-of": true,
		"ban-comma-operator": true,
		"forin": true,
		"no-arg": true,
		"no-conditional-assignment": true,
		"no-shadowed-variable": true,
		"no-switch-case-fall-through": true,
		"no-unsafe-finally": true,
		"no-unused-expression": [true, "allow-fast-null-checks"],
		"ordered-imports": true,
		"no-cookies": false,
		/// --- tslint-consistent-codestyle ---
		"early-exit": [
			true,
			{
				"max-length": 4,
				"ignore-constructor": true
			}
		],
		/// --- tslint-immutable ---
		"readonly-keyword": true,
		/// --- tslint-microsoft-contrib ---
		"no-relative-imports": [true, "allow-siblings"],
		"export-name": false
	},
	"linterOptions": {
		"exclude": ["**/node_modules/**", "node_modules/**"]
	}
}
